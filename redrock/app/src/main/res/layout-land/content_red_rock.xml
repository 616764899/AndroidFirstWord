<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.redrock.RedRockActivity">


    <TextView
        android:background="#FF4500"
        android:id="@+id/TextView0"
        android:layout_width="match_parent"
        android:layout_height="80dp"/>
    <ImageView
        android:layout_marginTop="29dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/ImageView0"
        android:src="@drawable/back"
        android:layout_width="23dp"
        android:layout_height="23dp" />
    <TextView
        android:textColor="#FFFFFF"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="90dp"
        android:textSize="27sp"
        android:id="@+id/TextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登陆" />
    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#FFFFFF"/>  //fff是什么意思?
    <EditText
        android:hint="请输入手机号"
        android:textSize="20sp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:id="@+id/EditText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:hint="输入密码"
        android:textSize="20sp"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:id="@+id/EditText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/Button0"
        android:background="#FFFFFF"
        android:textColor="#008000"
        android:text="忘记密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="285dp"
        android:layout_marginLeft="160dp"
        android:layout_marginRight="120dp"/>
    <Button
        android:onClick="finish"
        android:id="@+id/Button1"
        android:background="#FFFFFF"
        android:textColor="#008000"
        android:text="登陆"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Button0"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="270dp"/>  //为什么用marginRight 不可以
    <View
        android:layout_marginTop="370dp"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/EditText3"/>

    //android:layout_centerHorizontal="true" 为什么没效果
    <Button
        android:text="   立即用手机号注册账号   "
        android:background="#FFFFFF"
        android:textSize="16sp"
        android:textColor="#008000"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="95dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Button2" />
</RelativeLayout>
